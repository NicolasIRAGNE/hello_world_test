{
  "rules": [
    {
      "pattern": "**",
      "action": "Deny",
      "description": "Deny access to all files by default"
    },
    {
      "pattern": "*.md",
      "action": "Allow",
      "description": "Allow README and documentation files"
    },
    {
      "pattern": "*.py",
      "action": "Allow",
      "description": "Allow Python files for code understanding"
    },
    {
      "pattern": "CLAUDE.md",
      "action": "Allow",
      "description": "Allow project instructions"
    },
    {
      "pattern": "context/task/research/10/**",
      "action": "Allow",
      "description": "Allow access to current run (research/10) files only"
    },
    {
      "pattern": "context/task/meta.json",
      "action": "Allow",
      "description": "Allow access to task metadata"
    }
  ]
}